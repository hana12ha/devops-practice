#!/bin/bash

echo "===Starting System Update RedHat 9 ...==="

dnf update -y

if [ $? -eq 0 ];then
	echo "âœ… System update completed successfully."
else
	echo "âŒ System update failed. Check dnf logs."
	exit 1
fi

# Install nginx if not installed.
if ! rpm -qa | grep nginx; then
	echo "ğŸ” NGINX not found in RPM database â€” installing..."
	sudo dnf -y install nginx
	if [ $? -eq 0 ];then
		echo "âœ… nginx installed successfully."
	else
		echo "âŒ nginx installation failed. Check dnf logs."
		exit 1
	fi
else
	echo "âœ… NGINX package already installed."
fi

#Enable and start nginx

sudo systemctl enable --now nginx
sudo systemctl restart nginx
if systemctl is-active --quiet nginx; then
    echo "âœ… NGINX is running."
else
    echo "âŒ NGINX failed to start. Check with: sudo systemctl status nginx"
    exit 1
fi

echo "===== All tasks completed successfully ====="
